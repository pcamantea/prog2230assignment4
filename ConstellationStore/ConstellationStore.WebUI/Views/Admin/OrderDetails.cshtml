@model IEnumerable<ConstellationStore.Models.ViewModel.OrderViewModel>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

@foreach (var item in Model)
{
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Order.OrderId)
        </dt>

        <dd>
            @item.Order.OrderId
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd>
            @item.Order.OrderDate
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </dt>

        <dd>
            @item.Customer.CustomerName
        </dd>

    </dl>

    <p>
        <a href="@Url.Action("OrderEdit", "Admin", new { id = item.Order.OrderId })" class="btn btn-primary">
            Edit &nbsp;
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <a href="@Url.Action("OrderIndex", "Admin")" class="btn btn-primary">
            Back to List &nbsp;
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        </a>
    </p>

}
