<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <title>@ViewBag.Title - Constellation Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Constellation Store", "Index", "Home", new object { }, new { @class = "navbar-brand" })
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                    <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                    <li>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $.ajax({
                                    url: '/Products/QuantityInBasket',
                                    type: "POST",
                                    dataType: "json",
                                    success: function (data) {
                                        $("#quantityInBasket").text(data);},
                                    error: function () {
                                        alert("Some error occured.");}
                                });
                            });
                        </script>
                        <a href="@Url.Action("BasketSummary", "Products")">
                            Basket <br />
                            <span>&nbsp;&nbsp;&#91;&nbsp;<span id="quantityInBasket">0</span>&nbsp;&#93;</span>
                        </a>
                    </li>
                    <!--begin admin dropdown-->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle-inverse" data-toggle="dropdown">Admin <br /><span style="font-size: 80%;">Add/Remove<b class="caret"></b></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Products", "ProductIndex", "Admin")</li>
                            <li>@Html.ActionLink("Customers", "CustomerIndex", "Admin")</li>
                            <li>@Html.ActionLink("Orders", "OrderIndex", "Admin")</li>
                        </ul>
                    </li><!--end admin dropdown-->
                    <li class="dropdown">
                        <!--dropdown menu items-->
                        <a href="#" class="dropdown-toggle-inverse" data-toggle="dropdown">Social <br /><span style="font-size: 80%;">Talk to (About) Us<b class="caret"></b></span></a>
                        <ul class="dropdown-menu">
                            <!--<li class="dropdown-header">Dropdown header</li> optional dropdown header code-->
                            <li><a href="#" target="_blank">Facebook</a></li>
                            <!--<li class="disabled"><a href="#">Disabled link</a></li> optional disable of menu item-->
                            <li><a href="#" target="_blank">Twitter</a></li>
                            <!--<li role="separator" class="divider"></li> optional separator-->
                            <li><a href="#" target="_blank">Instagram</a></li>
                        </ul>
                    </li><!--end dropdown menu items-->
                </ul>
        </div>

            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Constellation Store System - Conestoga College - PROG2230 Winter 2016 - Student Alfredo Morgado ID 7381650</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
