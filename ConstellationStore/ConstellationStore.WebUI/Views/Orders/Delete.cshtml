@model IEnumerable<ConstellationStore.Models.ViewModel.OrderViewModel>

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    @foreach (var item in Model)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Order.OrderId)
            </dt>

            <dd>
                @item.Order.OrderId
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Order.OrderDate)
            </dt>
            <dd>
                @item.Order.OrderDate
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Customer.CustomerName)
            </dt>

            <dd>
                @item.Customer.CustomerName
            </dd>

        </dl>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <a href="@Url.Action("Index", "Orders")" class="btn btn-primary">
                Back to List &nbsp;
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            </a>
        </div>
    }
</div>
