@model ConstellationStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd>
            <td class="col-xs-2">
                <div>
                    <img class="img-responsive img-rounded thumb-img" src="@Html.DisplayFor(model => model.ImageUrl )" alt="@Html.DisplayFor(model => model.Description)">
                </div>
            </td>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CostPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CostPrice)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("BasketSummary", "Products")" class="btn btn-primary">
        Back to List &nbsp;
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    </a>
</p>
